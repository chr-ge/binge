<h1 class="text-center">Sign In</h1>

<%= form_with(url: session_path, local: true, html: { class: 'mx-auto' }) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, required: true %>

    <%= f.label :password %>
    <%= f.password_field :password, required: true %>

    <%= f.submit "Sign In" %>

    <p>No account yet? <%= link_to "Sign up!", signup_path %></p>
<% end %>